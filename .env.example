# ============================================
# RAG Backend Environment Configuration
# ============================================
# IMPORTANT: Do NOT use quotes around values unless they contain spaces
# Correct:   OPENAI_API_KEY=sk-proj-xxx
# Incorrect: OPENAI_API_KEY="sk-proj-xxx"

# REQUIRED: OpenAI API Key for embeddings
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# Application Settings (Optional)
# ============================================

# App configuration
APP_NAME=RAG Backend
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# API settings
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# ============================================
# File Upload Settings (Optional)
# ============================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Maximum number of files per request
MAX_FILES_PER_REQUEST=10

# ============================================
# Text Chunking Settings (Optional)
# ============================================

# Chunk size in characters
CHUNK_SIZE=1000

# Chunk overlap in characters
CHUNK_OVERLAP=200

# ============================================
# Embedding Settings (Optional)
# ============================================

# Embedding provider: "openai" or "local"
EMBEDDING_PROVIDER=openai

# OpenAI embedding model
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# OpenAI embedding dimensions
OPENAI_EMBEDDING_DIMENSIONS=1536

# Local embedding model (if using local provider)
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================
# Vector Store Settings (Optional)
# ============================================

# Vector store type: "chroma_local", "chroma_cloud", or "memory"
VECTOR_STORE=chroma_local

# ChromaDB collection name (used by both local and cloud)
CHROMA_COLLECTION_NAME=documents

# Chroma Cloud settings (required when VECTOR_STORE="chroma_cloud")
# CHROMA_CLOUD_API_KEY=your-chroma-api-key-here
# CHROMA_CLOUD_HOST=api.trychroma.com
# CHROMA_CLOUD_PORT=443
# CHROMA_CLOUD_TENANT=your-tenant-id
# CHROMA_CLOUD_DATABASE=your-database-name
